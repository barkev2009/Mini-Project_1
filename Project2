import math

# Inviting the user to pick a range from where the program will search for Pythagoras triangles
tr_range = input('Please, pick a range for the program to '
                 'search (type in two numbers through a space): ').split(sep=' ')
start = int(tr_range[0])
end = int(tr_range[1])

# Initializing the Pythagoras search
tr_list = []
for a in range(start, end + 1):
    for b in range(start, end + 1):
        c = math.sqrt(a**2 + b**2)
        if int(c) == c:
            c = int(c)
            list12 = [a, b]
            list12 = sorted(list12)
            list1 = list12 + [c]
            list1 = str(list1)
            tr_list.append(list1)

ordered = list(dict.fromkeys(tr_list))

for i in ordered:
    print(i)
